<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/RedLine"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:background="?android:attr/actionModeSplitBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="UserName:"
                style="@style/UserName"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LVuserName"
                android:layout_weight="1"/>

            <TextView
                android:text="Message here...(message from others)"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_below="@id/LVuserName"
                android:layout_alignParentLeft="true"
                android:id="@+id/LVmessage"
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/LVmessage"
                android:id="@+id/button30"
                android:onClick="messageDetail"
                android:textColor="@color/lightBlack"
                android:layout_weight="1"
                android:background="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4.0">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/white">

            </FrameLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:layout_alignParentEnd="true"
                android:id="@+id/button23"
                android:textColor="@color/lightBlack"
                android:layout_weight="1"
                android:background="@drawable/otp_icon_large" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:id="@+id/button24"
                android:layout_below="@id/button23"
                android:layout_alignStart="@+id/button23"
                android:textColor="@color/lightBlack"
                android:layout_weight="1"
                android:background="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>