<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/LL">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/top2"
            android:layout_marginTop="15dp"
            android:text="Post Page"
            android:textColor="@color/colorBlack"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:layout_below="@id/top2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Theme"
            android:id="@+id/EditText9"
            android:hint="theme here..."
            android:paddingLeft="30dp"
            android:background="@color/colorWhite"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="your problem here..."
            android:id="@+id/EditText"
            android:paddingLeft="30dp"
            android:layout_below="@id/EditText9"
            android:background="@color/colorWhite"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/EditText"
            android:id="@+id/imgView"
            android:rotation="90"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/imgView"
            android:layout_alignParentRight="true"
            android:text="+"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="30dp"
            android:textSize="60sp"
            android:onClick="toCamera"
            android:textColor="@color/lightBlack"
            android:background="@drawable/gradient_box"
            android:id="@+id/takePhoto"
            />

        <TextView
            android:text="location here..."
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgView"
            android:layout_alignParentLeft="true"
            android:id="@+id/textView3"
            android:gravity="center" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_alignLeft="@id/textView3"
            android:text="post date here..."
            android:id="@+id/postTime"
            android:gravity="center" />

        <TextView
            android:text="give a reward:"
            android:textSize="20dp"
            android:textColor="@color/lightBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/postTime"
            android:layout_alignParentStart="true"
            android:id="@+id/textView33" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_below="@id/textView33"
            android:layout_alignParentStart="true"
            android:id="@+id/editTextMoney" />


    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/LL">


        <Button
            android:text="Confirm"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="1"
            android:onClick="toMyPost"
            android:textColor="@color/lightBlack"/>
        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:text="Cancel"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button6"
            android:layout_weight="1"
            android:onClick="toMain"
            android:textColor="@color/lightBlack"/>
    </LinearLayout>


</RelativeLayout>