<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <rotate
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="60"
        android:toDegrees="0"
        android:duration="500"
        />
    <rotate
        android:startOffset="500"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="-60"
        android:toDegrees="0"
        android:duration="500"
        />

    <rotate
        android:startOffset="1000"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="60"
        android:toDegrees="0"
        android:duration="500"
        />
    <rotate
        android:startOffset="1500"
        android:pivotX="50%"
        android:pivotY="50%"
        android:fromDegrees="-60"
        android:toDegrees="0"
        android:duration="500"
        />

</set>